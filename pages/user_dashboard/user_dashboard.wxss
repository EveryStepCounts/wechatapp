page {
  background-color: #343a40; /* Set the background color to match the footer */
  color: #fff; /* Set text color to white for better readability on dark background */
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  margin: 0;
}

.content {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 45px; /* Add padding to the top */
}

.logo-container {
  width: 100%;
  text-align: center;
  margin-bottom: 20px;
}

.footer {
  width: 100%;
  background-color: #343a40;
  color: #fff;
  padding: 10px 0;
  text-align: center;
  bottom: 15px;
}

.footer navigator {
  color: #ffcc00;
  text-decoration: none;
}

.footer navigator:hover {
  text-decoration: underline;
}

.table-container {
  overflow-x: auto;
  width: 100%;
}

.table {
  width: 100%;
  table-layout: auto;
}

.table-header, .table-row {
  display: flex;
  width: 100%;
}

.table-cell {
  flex: 1;
  padding: 8px;
}

.logo {
  width: 150px;
  height: auto;
}

.container {
  background-color: #fff;
  color: #000;
  padding: 20px;
  border-radius: 5px;
  margin: 20px auto;
  max-width: 960px; /* Ensure consistent max-width */
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
  width: calc(100% - 40px); /* Ensure there is space around the container */
}

.greeting {
  font-size: 24px;
  font-weight: bold;
}

.user-info {
  margin: 20px 0;
  text-align: center;
}

.info-item {
  display: flex;
  justify-content: space-between;
  padding: 10px;
  border-bottom: 1px solid #ccc;
}

.distance-section {
  margin-top: 20px;
}

.picker {
  margin: 10px 0;
  padding: 10px;
  background-color: #f0f0f0;
  border-radius: 5px;
}

.btn {
  background-color: #ffcc00;
  color: #000;
  padding: 10px 20px;
  border: none;
  border-radius: 5px;
  cursor: pointer;
  transition: background-color 0.3s;
}

.btn:hover {
  background-color: #e6b800;
}

.qr-section {
  margin-top: 20px;
  text-align: center;
}

.qr-image {
  width: 200px;
  height: 200px;
  margin: 10px 0;
}
